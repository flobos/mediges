<odoo>
    <data>
    <record model="ir.actions.act_window" id="signos_vitales_list_action">
            <field name="name">Signo Vital</field>
            <field name="res_model">mediges.signos_vitales</field>
            <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.ui.view" id="signos_vitales_tree_view">
            <field name="name">Signo Vital</field>
            <field name="model">mediges.signos_vitales</field>

            <field name="arch" type="xml">
                <tree string="Signos Vitales">
                    <field name="tipo_signo_vital"/>
                    <field name="valor"/>
                </tree>
            </field>
    </record>

    <record model="ir.ui.view" id="signos_vitales_form_view">
        <field name="name">Tipo Signo Vital</field>
        <field name="model">mediges.signos_vitales</field>
        <field name="arch" type="xml">
          <form string="Signo Vital">
                <sheet>
                    <group string="Tipo Signos Vitales">
                        <field name="tipo_signo_vital"/>
                        <field name="valor"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    </data>
</odoo>